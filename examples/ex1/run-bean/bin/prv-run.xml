<!-- 
Replace "provider.name" with your provider name and specify property value for "provider.class."
Also you might need to adjust the classpath (provider.classpath) for your provider 
-->

<project name="Running Who Is It Bean" default="run.provider" basedir=".">

	<!-- system environment variables -->
	<property environment="env" />
	<property name="pom.file" value="../../ex1-prv/pom.xml" />
	<import file="${env.SORCER_HOME}/bin/common-run.xml" />

	<echo message="SORCER_HOME: ${sorcer.home}" />
	<echo message="WEBSTER: ${provider.webster.url}" />

	<!-- set property values here -->
	<property name="provider.name" value="ex1-prv" />
	<property name="provider.api" value="ex1-api" />
	<property name="provider.client.api" value="ex1-req-api" />	
	<property name="webster" value="${provider.webster.url}" />

	<condition property="provider.bean" value ="beans" >
	  <not><isset property="provider.bean" /></not>
	</condition>

	<condition property="provider.class" value="sorcer.core.provider.ServiceTasker" >
	  <not><isset property="provider.class" /></not>
	</condition>
	
	<condition property="beans.id" value ="1" >
	  <not><isset property="beans.id" /></not>
	</condition>

	<!-- provider classpath -->
	<path id="project.classpath">
	    <path refid="compile.classpath"/>  
	    <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/${provider.name}/${v.sorcer}/${provider.name}-${v.sorcer}.jar" />
	</path>
	
	<!-- provider codeabse jars -->
	<property name="j1" value="${webster}/org/sorcersoft/sorcer/${provider.api}/${v.sorcer}/${provider.api}-${v.sorcer}.jar" />
	<property name="j2" value="${webster}/org/sorcersoft/sorcer/${provider.client.api}/${v.sorcer}/${provider.client.api}-${v.sorcer}.jar" />
	<property name="j3" value="${webster}/org/sorcersoft/sorcer/sos-platform/${v.sorcer}/sos-platform-${v.sorcer}.jar" />
	<property name="j4" value="${webster}/org/sorcersoft/sorcer/commons-prv/${v.sorcer}/commons-prv-${v.sorcer}.jar" />
	<property name="j5" value="${webster}/org/sorcersoft/sorcer/sos-env/${v.sorcer}/sos-env-${v.sorcer}.jar" />

	<!-- start provider -->
	<target name="run.provider" depends="mvn-init">
	    <java classname="com.sun.jini.start.ServiceStarter" fork="yes">
	    	<classpath refid="jini.classpath"/>
			<sysproperty key="java.security.manager" value="" />
			<sysproperty key="java.util.logging.config.file" value="${sorcer.home}/configs/sorcer.logging" />
			<sysproperty key="java.security.policy" value="../policy/whoIsIt-bean.policy" />
			<sysproperty key="sorcer.provider.codebase" value="${j1} ${j2} ${j3} ${j4} ${j5}" />
			<sysproperty key="sorcer.provider.classpath" value="${toString:project.classpath}" />
			<sysproperty key="sorcer.provider.impl" value="${provider.class}" />
			<sysproperty key="sorcer.provider.config" value="../configs/whoIsIt-bean${beans.id}.config" />
			<sysproperty key="sorcer.env.file" value="${sorcer.home}/configs/sorcer.env" />
            <sysproperty key="java.rmi.server.useCodebaseOnly" value="false" />
			<arg value="${sorcer.home}/configs/startup-prv.config" />
		</java>
	</target>		
</project>

