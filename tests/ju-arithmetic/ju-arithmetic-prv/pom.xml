<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sorcersoft.sorcer</groupId>
		<artifactId>ju-arithmetic</artifactId>
		<version>1.0-M2-SNAPSHOT</version>
	</parent>

	<artifactId>ju-arithmetic-prv</artifactId>
	<name>SORCER OS :: int tests :: arithmetic :: provider</name>

	<dependencies>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>sos-platform</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>sos-env</artifactId>
            <version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>ju-arithmetic-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.sorcersoft.sorcer</groupId>
			<artifactId>commons-prv</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.river</groupId>
			<artifactId>start</artifactId>
			<version>${v.jini}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>net.jini</groupId>
			<artifactId>jsk-lib</artifactId>
			<version>${v.jini}</version>
		</dependency>
        <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>commons-req</artifactId>
            <version>${project.version}</version>
            <scope>test</scope>
        </dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<addExtensions>false</addExtensions>
							<classpathPrefix />
							<classpathLayoutType>custom</classpathLayoutType>
							<customClasspathLayout>${artifact.artifactId}.${artifact.extension}</customClasspathLayout>
						</manifest>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>run-its</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.sorcersoft.sorcer</groupId>
						<artifactId>sorcer-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>default-cli</id>
								<goals>
									<goal>provider</goal>
								</goals>
							</execution>
							<execution>
								<id>sorcer-it</id>
								<goals>
									<goal>run-requestor</goal>
								</goals>
								<configuration>
									<requestorClasspath>
										<entry>${project.groupId}:sos-platform:${project.version}</entry>
										<entry>${project.groupId}:commons-req:${project.version}</entry>
										<entry>${project.groupId}:${project.artifactId}:${project.version}</entry>
                                        <entry>${project.groupId}:dbp-api:${project.version}</entry>
										<entry>net.jini.lookup:serviceui:${v.jini}</entry>
										<entry>junit:junit:${v.junit}</entry>
										<entry>org.slf4j:slf4j-simple:${v.slf4j}</entry>
										<entry>com.sleepycat:je:${v.sleepycat}</entry>
									</requestorClasspath>
									<requestors>
										<param>
											<mainClass>junit.sorcer.core.provider.ArithmeticNetTest</mainClass>
											<codebase>
												<!--<param>${project.groupId}:${project.artifactId}:${project.version}</param>-->
												<param>org.sorcersoft.sorcer:sos-platform:${project.version}</param>
												<param>org.sorcersoft.sorcer:ju-arithmetic-api:${project.version}</param>
											</codebase>
										</param>
										<param>
											<mainClass>junit.sorcer.core.provider.ProviderAccessorTest</mainClass>
										</param>
										<requestor>
											<mainClass>junit.sorcer.util.bdb.objects.SosUrlsTest</mainClass>
										</requestor>
									</requestors>
								</configuration>
							</execution>
							<execution>
								<id>sorcer-postit</id>
								<goals>
									<goal>destroy</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
