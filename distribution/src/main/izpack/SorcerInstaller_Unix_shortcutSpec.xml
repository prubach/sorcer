<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="Sorcer" location="applications"/>
    <shortcut KdeUsername="root" applications="yes"
              description="Start Sorcer platform" desktop="yes"
              encoding="UTF-8" iconFile="$INSTALL_PATH/configs/icons/sos.png" iconIndex="0"
              initialState="normal" name="Start Sorcer" programGroup="yes"
              startMenu="no" startup="no"
              target="$INSTALL_PATH/bin/sorcer-boot" terminal="true" type="Application"
              workingDirectory="$INSTALL_PATH"/>
    <shortcut KdeUsername="root" applications="yes" desktop="yes"
              encoding="UTF-8" iconFile="$INSTALL_PATH/configs/icons/browser.png"
              iconIndex="0" initialState="normal" name="Sorcer Browser"
              programGroup="yes" startMenu="no" startup="no"
              target="$INSTALL_PATH/bin/sorcer-browser" type="Application" workingDirectory="$INSTALL_PATH"/>
    <shortcut KdeUsername="root" applications="yes"
              description="Sorcer Network Shell" desktop="yes"
              encoding="UTF-8" initialState="normal" name="Network Shell"
              programGroup="yes" startMenu="no" startup="no"
              target="$INSTALL_PATH/bin/nsh" terminal="true"
              type="Application" workingDirectory="$INSTALL_PATH"
              iconFile="$INSTALL_PATH/configs/icons/nsh.png"/>
    <shortcut KdeUsername="root" applications="yes"
              description="Sorcer Examples README" desktop="yes"
              encoding="UTF-8" initialState="normal" name="Sorcer Examples README"
              programGroup="yes" startMenu="no" startup="no"
              url="file://$INSTALL_PATH/examples/README.txt"
              type="Link"
              iconFile="$INSTALL_PATH/configs/icons/examples.png">
              <createForPack name="Sorcer Examples"/>
    </shortcut>
    <shortcut KdeUsername="root" applications="yes"
              description="Sorcer Examples Terminal" desktop="yes"
              encoding="UTF-8" initialState="noShow" name="Sorcer Examples Terminal"
              programGroup="yes" startMenu="no" startup="no"
              target="$INSTALL_PATH/bin/terminal_sorcer" terminal="false"
              type="Application" workingDirectory="$INSTALL_PATH/examples"
              iconFile="$INSTALL_PATH/configs/icons/examples.png"/>

    <shortcut KdeUsername="root" applications="yes"
              description="Start Rio Provisioning GUI" desktop="yes"
              encoding="UTF-8" iconFile="$INSTALL_PATH/configs/icons/rio.png" iconIndex="0"
              initialState="normal" name="Start Rio UI" programGroup="yes"
              startMenu="no" startup="no"
              target="$INSTALL_PATH/bin/rio-ui" terminal="true" type="Application"
              workingDirectory="$INSTALL_PATH"/>

    <shortcut KdeUsername="root" applications="yes"
              description="Uninstalls Sorcer" desktop="no"
              encoding="UTF-8" initialState="normal" name="Uninstall Sorcer"
              programGroup="yes"  startMenu="no" startup="no"
              target="$INSTALL_PATH/bin/uninstall"
              type="Application" workingDirectory="$INSTALL_PATH"
              iconFile="$INSTALL_PATH/configs/icons/uninstaller.png"/>
</shortcuts>
