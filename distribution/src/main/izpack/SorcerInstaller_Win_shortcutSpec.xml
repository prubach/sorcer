<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<shortcuts>
    <skipIfNotSupported/>
    <programGroup defaultName="Sorcer" location="applications"/>
    <shortcut applications="no" description="Start Sorcer platform"
	    desktop="yes" iconFile="$INSTALL_PATH/configs/icons/sos.ico" iconIndex="0"
        name="Start Sorcer" programGroup="yes"
        startMenu="no" startup="no" target="$INSTALL_PATH/bin/sorcer-boot.bat" workingDirectory="$INSTALL_PATH"/>
    <shortcut applications="no" desktop="yes"
	    iconFile="$INSTALL_PATH/configs/icons/browser.ico" iconIndex="0"
        initialState="noShow" name="Sorcer Browser" programGroup="yes"
        startMenu="no" startup="no" target="$INSTALL_PATH/bin/sorcer-browser.bat" workingDirectory="$INSTALL_PATH"/>
    <shortcut applications="no" description="Sorcer Network Shell"
        iconFile="$INSTALL_PATH/configs/icons/nsh.ico"
        desktop="yes" name="Network Shell"
        programGroup="yes" startMenu="no" startup="no"
        target="$INSTALL_PATH/bin/nsh.bat" workingDirectory="$INSTALL_PATH"/>
    <shortcut applications="no" description="Sorcer Examples"
        iconFile="$INSTALL_PATH/configs/icons/examples.ico"
        desktop="yes" name="Sorcer Examples"
        programGroup="yes" startMenu="no" startup="no"
        target="$INSTALL_PATH/bin/setenv.bat" workingDirectory="$INSTALL_PATH/examples">
        <createForPack name="Sorcer Examples"/>
    </shortcut>
    <shortcut applications="no" description="Start Rio pltaform UI "
              desktop="yes" iconFile="$INSTALL_PATH/configs/icons/rio.ico"
              name="Start Rio UI" programGroup="yes"
              startMenu="no" startup="no" target="$INSTALL_PATH/bin/rio-ui.cmd" workingDirectory="$INSTALL_PATH"/>
    <shortcut
		name="Uninstall Sorcer"
		target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
		commandline=""
		description="Uninstalls Sorcer Platform"
		programGroup="yes"
		desktop="no"
		applications="no"
		startMenu="no"
		startup="no"
		iconFile="%SystemRoot%\system32\SHELL32.dll"
		iconIndex="31"/>

</shortcuts>
