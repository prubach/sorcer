<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.sorcersoft.sorcer</groupId>
        <version>1.0-M5-SNAPSHOT</version>
        <artifactId>tools</artifactId>
    </parent>

    <artifactId>browser</artifactId>
    <packaging>jar</packaging>
    <name>SORCER tools :: browser</name>
    <description>SORCER</description>
    <url>http://sorcersoft.org/</url>

    <dependencies>
         <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-ui</artifactId>
            <version>${project.version}</version>
         </dependency>
         <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sorcer-api</artifactId>
            <version>${project.version}</version>
         </dependency>
         <dependency>
            <groupId>org.sorcersoft.sorcer</groupId>
            <artifactId>sos-webster</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.cheiron.jsc</groupId>
            <artifactId>jsc-admin</artifactId>
            <version>0.1-b31078</version>
        </dependency>
        <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
        </dependency>
        <dependency>
            <groupId>com.apple</groupId>
            <artifactId>AppleJavaExtensions</artifactId>
            <version>1.4</version>
		</dependency>

        <!-- required for artifact url -->
		<dependency>
			<groupId>org.rioproject</groupId>
			<artifactId>rio-platform</artifactId>
            <scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>com.sorcersoft.river</groupId>
			<artifactId>jsk-platform</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-simple</artifactId>
			<version>${v.slf4j}</version>
            <scope>test</scope>
		</dependency>
	</dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <addExtensions>false</addExtensions>
                            <classpathPrefix/>
                            <classpathLayoutType>custom</classpathLayoutType>
                            <customClasspathLayout>${artifact.artifactId}.${artifact.extension}</customClasspathLayout>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
