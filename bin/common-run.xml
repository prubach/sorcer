            </path>

            <path id="boot.classpath">
                <path refid="jini.classpath"/>                
                <pathelement location="${mvn.repo}/org/sorcersoft/sorcer/sos-boot/${v.sorcer}/sos-boot-${v.sorcer}.jar"/>
