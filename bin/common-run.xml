                <pathelement location="${mvn.repo}/org/rioproject/rio-lib/${v.rio}/rio-lib-${v.rio}.jar"/>
                <pathelement location="${mvn.repo}/org/rioproject/rio-api/${v.rio}/rio-api-${v.rio}.jar"/>
