                <pathelement location="${mvn.repo}/net/jini/lookup/serviceui/${v.jini}/serviceui-${v.jini}.jar"/>
                <pathelement location="${mvn.repo}/org/slf4j/slf4j-api/${v.slf4j}/slf4j-api-${v.slf4j}.jar"/>
